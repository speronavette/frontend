{
  "name": "spero-navette-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "homepage": "https://spero-navette.be",
  
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "build:analyze": "vite build && npx vite-bundle-analyzer dist",
    "build:prod": "NODE_ENV=production vite build",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix",
    "preview": "vite preview --host",
    "test:lighthouse": "lighthouse http://localhost:4173 --form-factor=mobile --output=html --output-path=lighthouse-mobile.html",
    "test:performance": "npm run build && npm run preview & sleep 3 && npm run test:lighthouse",
    "clean": "rm -rf dist node_modules/.vite",
    "reinstall": "rm -rf node_modules package-lock.json && npm install"
  },
  
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "react-helmet-async": "^2.0.5",
    
    "@radix-ui/react-alert-dialog": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-popover": "^1.1.4",
    "@radix-ui/react-radio-group": "^1.2.2",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-toast": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.1.6",
    
    "@stripe/react-stripe-js": "^4.0.0",
    "@stripe/stripe-js": "^8.0.0",
    
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0",
    "lucide-react": "^0.451.0",
    
    "date-fns": "^4.1.0",
    "react-date-range": "^2.0.1",
    "react-day-picker": "^9.5.0"
  },
  
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    
    "vite": "^5.4.10",
    "vite-bundle-analyzer": "^0.22.3",
    
    "eslint": "^9.15.0",
    "@eslint/js": "^9.15.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0",
    
    "tailwindcss": "^3.4.16",
    "postcss": "^8.4.49",
    "autoprefixer": "^10.4.20",
    
    "lighthouse": "^12.0.0"
  },
  
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
